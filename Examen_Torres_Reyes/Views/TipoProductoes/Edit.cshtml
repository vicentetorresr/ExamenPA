@model Examen_Torres_Reyes.Models.TipoProducto

@{
    ViewData["Title"] = "Editar Tipo de Producto";
}

<h1 class="form-title text-center">Editar Tipo de Producto</h1>

<div class="container elegant-form-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <div class="card-body">
                    <h4 class="form-subtitle text-center mb-4">Actualice la información del tipo de producto</h4>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-4">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control elegant-input" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <input asp-for="Descripcion" class="form-control elegant-input" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Estado" class="form-label"></label>
                            <select asp-for="Estado" class="form-control elegant-input">
                                <option value="">Seleccione un Estado</option>
                                <option value="Disponible">Disponible</option>
                                <option value="No Disponible">No Disponible</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-lg elegant-submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <a asp-action="Index" class="btn btn-secondary elegant-back-button">Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Título del Formulario */
    .form-title {
        font-size: 2rem;
        color: #343a40;
        margin-bottom: 20px;
    }

    /* Contenedor elegante para el formulario */
    .elegant-form-container {
        margin-top: 30px;
    }

    /* Estilo de la tarjeta que contiene el formulario */
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-body {
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    /* Estilo del subtítulo */
    .form-subtitle {
        font-size: 1.25rem;
        color: #6c757d;
    }

    /* Estilo para los campos de entrada del formulario */
    .elegant-input {
        border: 2px solid #ced4da;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .elegant-input:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    /* Estilo para el botón de Guardar Cambios */
    .elegant-submit {
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .elegant-submit:hover {
            background-color: #0056b3;
            transform: translateY(-3px);
        }

    /* Estilo para el botón Volver a la Lista */
    .elegant-back-button {
        padding: 10px 20px;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .elegant-back-button:hover {
            background-color: #5a6268;
            transform: translateY(-3px);
        }
</style>
