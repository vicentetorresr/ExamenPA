@model Examen_Torres_Reyes.Models.TipoProducto

@{
    ViewData["Title"] = "Detalles del Tipo de Producto";
}

<h1 class="form-title text-center">Detalles del Tipo de Producto</h1>

<div class="container elegant-form-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <div class="card-body">
                    <h4 class="text-center text-muted mb-4">Información del Tipo de Producto</h4>
                    <hr />
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-end font-weight-bold">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-8 text-start">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-4 text-end font-weight-bold">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-8 text-start">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                        <dt class="col-sm-4 text-end font-weight-bold">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-8 text-start">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </dl>

                    <div class="form-group text-center">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg elegant-edit-button me-3">Editar</a>
                        <a asp-action="Index" class="btn btn-secondary elegant-back-button">Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Título del Formulario */
    .form-title {
        font-size: 2rem;
        color: #343a40;
        margin-bottom: 20px;
    }

    /* Contenedor elegante para el formulario */
    .elegant-form-container {
        margin-top: 30px;
    }

    /* Estilo de la tarjeta que contiene el formulario */
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-body {
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    /* Estilo del subtítulo */
    .text-muted {
        font-size: 1.25rem;
    }

    /* Estilo para los detalles del producto */
    .row dl {
        margin-top: 10px;
    }

    /* Estilo para los botones de acción */
    .elegant-edit-button {
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .elegant-edit-button:hover {
            background-color: #0056b3;
            transform: translateY(-3px);
        }

    .elegant-back-button {
        padding: 10px 20px;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .elegant-back-button:hover {
            background-color: #5a6268;
            transform: translateY(-3px);
        }
</style>
