@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Reporte de Proveedores por Ubicación";
}

<h1 class="form-title text-center">Reporte de Proveedores por Ubicación</h1>

<div class="container elegant-report-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <div class="card-body">
                    <h4 class="text-center text-muted mb-4">Número de Proveedores por Ubicación</h4>
                    <hr />
                    <table class="table table-bordered table-hover table-striped elegant-table">
                        <thead class="table-dark">
                            <tr>
                                <th>Ubicación</th>
                                <th>Proveedores</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Ubicacion</td>
                                    <td>@item.Proveedores</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="form-group text-center mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary elegant-back-button">Volver al Inicio</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Título del Formulario */
    .form-title {
        font-size: 2rem;
        color: #343a40;
        margin-bottom: 20px;
    }

    /* Contenedor elegante para el reporte */
    .elegant-report-container {
        margin-top: 30px;
    }

    /* Estilo de la tarjeta que contiene el reporte */
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-body {
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    /* Estilo del subtítulo */
    .text-muted {
        font-size: 1.25rem;
    }

    /* Estilo de la tabla */
    .elegant-table {
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

        .elegant-table th, .elegant-table td {
            padding: 12px;
            text-align: center;
        }

        .elegant-table tbody tr:hover {
            background-color: #e9ecef;
        }

    /* Estilo para los botones de acción */
    .elegant-back-button {
        padding: 10px 20px;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .elegant-back-button:hover {
            background-color: #5a6268;
            transform: translateY(-3px);
        }
</style>
